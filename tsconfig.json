{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": false,
        "target":"ES5",
        "outDir": "lib"
    },
    "include": [
         "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "typeRoots": [
      "./node_modules/@types/",
      "src/@types/"
    ]
}
