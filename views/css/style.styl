body, .graph, .nodes
	margin 0
	overflow hidden

.nodes, svg.edges
	absolute top left

.graph
	fixed top left
	width:100%;
	height:100%;
	background-color #055C4C
.nodes
	width:100%;
	height:100%;
svg.edges
	z-index: 1

path
	fill: none
	stroke: #aaa
	stroke-width: 5
	&.sel
		stroke: blue
		stroke-width: 5
.component
	font-size 1em
	position absolute
	min-width 80px
	min-height 80px
	background-color #fff
	border-radius 0.3em
	border 0.2em solid #aaa
	z-index: 2
	.title
		text-align: center
		background-color #999
		height: 1.5em
		border-top-left-radius 0.1em
		border-top-right-radius 0.1em
	.input
		float left
	.output
		float right
	.box
		display inline-block
		height: 0.5em
		width: 0.5em
		background-color #aaa
		border-radius 0.1em