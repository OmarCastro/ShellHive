@import 'nib'

body, .graph, .nodes
	margin 0
	overflow hidden

.nodes, div[graph-model] svg
	absolute top 0 left 10%
	width 90%
	height 100%
	transform-origin: 0 0
div[graph-model] svg
	background-color: #ccc


.graph
	fixed top left
	width:100%;
	height:100%;

div[sidebar]
	overflow auto
	display inline-block
	absolute top left bottom
	width: 10%
	transition: all 0.3s linear;
	background-color: #ddd

	z-index: 5

svg.edges
	z-index: 1

path
	fill: none
	stroke: #aaa
	stroke-width: 5
	&.sel
		stroke: blue
		stroke-width: 5
.component, .inline-component
	font-size 1em
	position absolute
	min-width 80px
	min-height 80px
	background-color #fff
	border-radius 0.3em
	border 0.2em solid #aaa
	z-index: 2
	.title
		text-align: center
		background-color #ddd
		height: 1.5em
		border-top-left-radius 0.1em
		border-top-right-radius 0.1em
	.input
		float left
	.output
		float right
	.box
		display inline-block
		margin-top 0.2em
		height: 0.7em
		width: 1em
		background-color #aaa
		border-radius 0.1em	
		&:hover
			background-color blue
	label
		font-weight: normal
		margin: 0
	input[type="checkbox"]
		margin: 0