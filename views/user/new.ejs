<form action="/signup " method="POST" class="form-signin well">
  <h2 class="form-signin-header center">Create Account</h2>

<% if(req.session.flash && req.session.flash.err) { %>
    <ul class="alert alert-success">

  <%  _.each(req.session.flash.err, function(err) { %>
    <li><%= err %></li>
  <% }) %>
  </ul>
  <% } %>

  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control signup-name" placeholder="your name" name="name">
  </div>

  <div class="form-group">
    <label for="name">Email address</label>
    <input type="text" class="form-control signup-email" placeholder="your email" name="email">
  </div>

  <div class="form-group">
    <label for="name">Password</label>
    <input type="password" class="form-control signup-password" placeholder="your password" name="password">
  </div>

  <div class="form-group">
    <label for="name">Password confirmation</label>
    <input type="password" class="form-control signup-confirmation" placeholder="password confirmation" name="confirmation">
  </div>

  <input type="submit" class="btn btn-lg btn-primary btn-block signup-submit" value="Create Account">
  <input type="hidden" name="_csrf" value="<%= _csrf %>" />
</form>